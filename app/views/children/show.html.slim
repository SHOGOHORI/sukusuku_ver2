.child_show
  ul.child_show_left
    li.child_image
      - if @child.avatar?
        = image_tag @child.avatar.url, alt: 'icon', height: '300px', width: '300px'
      - else
        = image_tag 'child_icon.png', alt: 'icon', height: '300px', width: '300px'
      div.comment
        = @child.comment
    li
      h2
        = @child.nick_name
  ul.child_show_rigth
    li
      h2
        = age_and_moon_age(@child.birthday)
    li
      h2
        = child_birthday(@child.birthday)
  = link_to '編集', edit_child_path(@child)
